<h3 class="ui header">{{t "forms.i-i-s-i-s-s7-рабочее-место-e.caption"}}</h3>

<form class="ui form flexberry-vertical-form" role="form">
  {{flexberry-error error=error}}
  <div class="field">
    <div class="flexberry-edit-panel">
      {{#unless readonly}}
        <button class="ui button save-button" {{action "save"}}>
          {{t "forms.edit-form.save-button-text"}}
        </button>
        {{#unless model.isNew}}
          <button class="ui button save-del-button" {{action "delete"}}>
            {{t "forms.edit-form.delete-button-text"}}
          </button>
        {{/unless}}
      {{/unless}}
      <button class="ui button close-button" {{action "close"}}>
        {{t "forms.edit-form.close-button-text"}}
      </button>
    </div>
  </div>
  <div class="field flexberry-validationsummary-container">
    <div class="sixteen wide">
      {{flexberry-validationsummary errors=(v-get validationObject "messages")}}
    </div>
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.инвНомре
      class=(if (v-get validationModel "инвНомре" "isInvalid") "error")
      label=(t "forms.i-i-s-i-s-s7-рабочее-место-e.инвНомре-caption")
      data-test-i-i-s-i-s-s7-рабочее-место-e-инвНомре=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "инвНомре" "message")}}
  </div>
  <div class="field">
    {{flexberry-field
      readonly=readonly
      value=model.место
      class=(if (v-get validationModel "место" "isInvalid") "error")
      label=(t "forms.i-i-s-i-s-s7-рабочее-место-e.место-caption")
      data-test-i-i-s-i-s-s7-рабочее-место-e-место=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "место" "message")}}
  </div>
  <div class="field">
    <label>{{t "forms.i-i-s-i-s-s7-рабочее-место-e.оборудование-caption"}}</label>
    {{flexberry-groupedit
      componentName="оборудованиеGroupEdit"
      mainModelProjection=modelProjection
      modelProjection=modelProjection.attributes.оборудование
      content=model.оборудование
      readonly=readonly
      orderable=false
      class=(if (v-get validationModel "оборудование" "isInvalid") "error")
      data-test-i-i-s-i-s-s7-рабочее-место-e-оборудование=true
    }}
    {{flexberry-validationmessage error=(v-get validationModel "оборудование" "message")}}
  </div>
</form>
